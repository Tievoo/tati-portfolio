---
import Topbar from '../components/topbar.astro';
import '../styles/global.css';
const { pageTitle, inPage } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Portfolio de fotografía de Tatiana Schejtman." />
    <meta name="author" content="Tatiana Schejtman" />
    <meta name="theme-color" content="#000000" />
    <meta name="keywords" content="fotografía, portfolio, Tatiana Schejtman, Tatiana, freelance, fotografia caba" />
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="Portfolio de fotografía de Tatiana Schejtman." />
    <!-- <meta property="og:image" content="/images/cover.jpg" /> -->
    <meta property="og:url" content="https://tati-sch.netlify.app" />
    <meta property="og:site_name" content="Tatiana Schejtman - Portfolio" />
    <title>{pageTitle}</title>
  </head>
  <body>
    <div class="flex flex-col">
      <Topbar inPage={inPage} />
    </div>
    <slot />
  </body>
</html>
