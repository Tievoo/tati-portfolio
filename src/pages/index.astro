---
import Cover from "../components/cover.astro";
import Base from "../layouts/base.astro";
import { Covers } from "../scripts/Covers";

// This is the main entry point for the Astro application.
---

<Base pageTitle="Tatiana Schejtman">
    <div class="flex flex-col gap-4 items-center justify-center text-white mx-4 xl:mx-0 mb-4">
        <h1 class="text-3xl md:text-4xl font-medium text-c-white uppercase mb-3">Tatiana Schejtman</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {Covers.map((cover) => (
                <Cover
                    data={cover}
                />
            ))}
        </div>
    </div>
</Base>